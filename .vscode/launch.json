    "version": "0.2.0",
    "configurations": [
        {
            // remix back-end debug
            "name": "back-end remix",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "type": "node-terminal",
            "command": "npm run dev",
            "outFiles": [
                "${workspaceFolder}/build/**/*.(m|c|)js",
                "!**/node_modules/**"
            ],
            "sourceMaps": true
        }
    ]
}